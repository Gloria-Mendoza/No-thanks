<Window x:Class="NoThanks.Personalization"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:NoThanks"
        xmlns:p = "clr-namespace:NoThanks.Properties"
        mc:Ignorable="d"
        Title="{x:Static p:Resources.PERSONALIZATION_TITLE_WINDOW}" Height="450" Width="800">
    <Window.Background>
        <ImageBrush ImageSource="/Images/5053309.jpg"/>
    </Window.Background>
    <Grid>
        <Button Content="{x:Static p:Resources.GENERAL_BACK_BUTTON}" Margin="0,33,66,0" FontFamily="Arial" FontWeight="Bold" FontSize="16" Click="BackBotton" Height="34" VerticalAlignment="Top" HorizontalAlignment="Right" Width="62"/>
        <ComboBox x:Name="cmb" HorizontalAlignment="Left" Margin="57,306,0,0" VerticalAlignment="Top" Width="197" SelectionChanged="SelectionLanguage">
            <ComboBoxItem Content="{x:Static p:Resources.LANGUAGE_ENGLISH_COLUMN}"/>
            <ComboBoxItem Content="{x:Static p:Resources.LANGUAGE_SPANISH_COLUMN}"/>
        </ComboBox>
        <Button Content="{x:Static p:Resources.GENERAL_CONFIRM_BUTTON}" HorizontalAlignment="Left" Margin="275,304,0,0" VerticalAlignment="Top" Click="ConfirmBottom" Height="25" Width="75"/>

    </Grid>
</Window>
